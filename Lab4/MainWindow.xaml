<Window x:Class="Lab4.MainWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        xmlns:d="http://schemas.microsoft.com/expression/blend/2008"
        xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006"
        xmlns:local="clr-namespace:Lab4"
        mc:Ignorable="d"
        Title="EasyChanger" Height="300" Width="500">
    <Grid>
        <Grid.RowDefinitions>
            <RowDefinition></RowDefinition>
            <RowDefinition></RowDefinition>
        </Grid.RowDefinitions>
        <StackPanel Orientation="Horizontal"  HorizontalAlignment="Center" Grid.Row="0">
            <Button BorderThickness="2" Margin="15" Height="50" Width="100" Content="Change" Click="Button_Click_Change"></Button>
            <Button BorderThickness="2" Margin="15" Height="50" Width="100" Content="Exit" Click="Button_Click_Exit"></Button>
        </StackPanel>
        <StackPanel Orientation="Horizontal" HorizontalAlignment="Center" Grid.Row="1" >
            <TextBox x:Name="TextBox1" Margin="15" Width="100" Height="50"/>
            <TextBox x:Name="TextBox2" Margin="15" Width="100" Height="50"/>
        </StackPanel>
        
            
    </Grid>
</Window>
